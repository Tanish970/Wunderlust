<% layout('/layouts/boilerplate') -%>
<body>
   <h3>All Listings</h3> 
   <form method="GET" action="/listings/new">
    <button type="submit" class="btn btn-primary new-listing-btn">Create New Listing</button>
</form>

   <br /><br/>
   <div class="container">
    <div class="row">
        <% for(listing of allListing) { %>
            <div class="col-md-4 mb-4">
                <a href="listings/<%= listing._id %>" class="listing_link">

                    <div class="card">
                        <div class="card-overlay"></div>
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image">
                        <div class="card-body">
                            <p class="card-text">
                                <%= listing.title %><br/>
                                &#x20B9;<%= listing.price.toLocaleString("en-IN") %>
                            </p>
                            
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>


</body>


